{
  "module": {
    // 生成的模块是es6
    "type": "es6",
    // 忽略动态导入
    "ignoreDynamic": true
  },
  "jsc": {
    "parser": {
      // 解析ts
      "syntax": "typescript",
      "decorators": true,
      "dynamicImport": true,
      // 编译tsx
      "tsx": true
    },
    "transform": {
      // 开启装饰器
      "legacyDecorator": true,
      // 开启元数据
      "decoratorMetadata": true,
      "react": {
        // 开启后支持react新版本
        "runtime": "automatic",
        "throwIfNamespace": true,
        "useBuiltins": true
      }
    },
    // 生成目标 esnext
    "target": "esnext",
    // 开启严格模式
    "loose": true,
    // 开启帮助函数
    "externalHelpers": true,
    // 忽略类名
    "keepClassNames": false
  }
}
